{
  "$schema": "https://charm.land/crush.json",
  "options": {
    "context_paths": ["{{ ansible_env.HOME }}/.config/crush/container-use.mdx"]
  },
  "lsp": {
    "go": {
      "command": "gopls"
    },
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"]
    }
  },
  "mcp": {
    "container-use": {
      "type": "stdio",
      "command": "cu",
      "args": ["stdio"]
    }
  },
  "providers": {
    "Copilot": {
      "type": "openai",
      "base_url": "http://localhost:4141/v1",
      "models": [
        {
          "id": "claude-3.5-sonnet",
          "name": "Claude 3.5 Sonnet",
          "context_window": 32768,
          "can_reason": true,
          "cost_per_1m_in": 0,
          "cost_per_1m_in_cached": 0,
          "cost_per_1m_out": 0,
          "cost_per_1m_out_cached": 0,
          "has_reasoning_efforts": true,
          "supports_attachments": false,
          "default_max_tokens": 32768
        },
        {
          "id": "gpt-4.1",
          "name": "GPT 4.1",
          "context_window": 32768,
          "can_reason": true,
          "cost_per_1m_in": 0,
          "cost_per_1m_in_cached": 0,
          "cost_per_1m_out": 0,
          "cost_per_1m_out_cached": 0,
          "has_reasoning_efforts": true,
          "supports_attachments": false,
          "default_max_tokens": 32768
        },
        {
          "id": "gpt-41-copilot",
          "name": "GPT 4.1 Copilot",
          "context_window": 32768,
          "can_reason": true,
          "cost_per_1m_in": 0,
          "cost_per_1m_in_cached": 0,
          "cost_per_1m_out": 0,
          "cost_per_1m_out_cached": 0,
          "has_reasoning_efforts": true,
          "supports_attachments": false,
          "default_max_tokens": 32768
        }
      ]
    },
    "Ollama": {
      "type": "openai",
      "base_url": "http://localhost:11434/v1",
      "models": [
        {
          "id": "qwen3:8b",
          "name": "Qwen3 8b",
          "context_window": 32768,
          "can_reason": true,
          "cost_per_1m_in": 0,
          "cost_per_1m_in_cached": 0,
          "cost_per_1m_out": 0,
          "cost_per_1m_out_cached": 0,
          "has_reasoning_efforts": true,
          "supports_attachments": false,
          "default_max_tokens": 32768
        }
      ]
    }
  }
}
